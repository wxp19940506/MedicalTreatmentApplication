<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:zhy="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_schedule_note_edit"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="iok.la.com.medicaltreatmentapplication.activities.ScheduleNoteEditActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/titlebar_background"
        android:gravity="center">
        <ImageButton
            android:id="@+id/turn_last"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:background="@android:color/transparent"
            android:src="@mipmap/zuob"
            />
        <TextView
            android:id="@+id/title"
            style="@style/Title_Style"
            android:text="@string/edit_schedule_note"/>
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="30dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/open_time"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="20dp"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:drawableRight="@mipmap/down"
                android:paddingRight="10dp"
                android:background="@color/white"
                android:text="@string/about_time"/>
            <TextView
                android:id="@+id/request_time"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:drawableRight="@mipmap/down"
                android:paddingRight="10dp"
                android:background="@color/white"
                android:text="@string/request_time"/>
            <TextView
                android:id="@+id/total_office"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:drawableRight="@mipmap/down"
                android:paddingRight="10dp"
                android:background="@color/white"
                android:text="@string/total_office"/>
            <TextView
                android:id="@+id/schedule_name"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:drawableRight="@mipmap/down"
                android:paddingRight="10dp"
                android:background="@color/white"
                android:text="@string/office"/>
            <LinearLayout
                android:id="@+id/class_select"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:layout_weight="1">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="10dp"
                        android:text="@string/select_class"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:orientation="vertical"
                    android:layout_weight="3">
                    <!--<iok.la.com.medicaltreatmentapplication.widget.ScheduleNoteListView-->
                    <!--android:id="@+id/selectlist"-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:horizontalSpacing="15dp"-->
                    <!--android:verticalSpacing="15dp"-->
                    <!--android:dividerHeight="5dp"-->
                    <!--android:divider="@color/white">-->

                    <!--</iok.la.com.medicaltreatmentapplication.widget.ScheduleNoteListView>-->
                    <com.zhy.view.flowlayout.TagFlowLayout
                        android:id="@+id/class_select_data"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        zhy:max_select="-1"

                        >

                    </com.zhy.view.flowlayout.TagFlowLayout>
                    <Button
                        android:id="@+id/more"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:background="@android:color/transparent"
                        android:text="@string/more"/>
                    <Button
                        android:id="@+id/less"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:background="@android:color/transparent"
                        android:visibility="gone"
                        android:text="@string/less"/>
                </LinearLayout>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/black2"
                android:layout_margin="5dp"/>
            <LinearLayout
                android:id="@+id/other_class"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/white"
                android:gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/other_select"
                    android:drawablePadding="5dp"
                    android:drawableRight="@mipmap/plus_little"/>
            </LinearLayout>
            <com.zhy.view.flowlayout.TagFlowLayout
                android:id="@+id/otherclass_select_data"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                zhy:max_select="-1"
                zhy:gravity="center"
                >

            </com.zhy.view.flowlayout.TagFlowLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="@string/chengdu"/>
                <RadioGroup
                    android:id="@+id/jijinlist"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:horizontalSpacing="5dp"
                    android:padding="5dp"
                    android:orientation="horizontal"
                    android:numColumns="3">
                    <RadioButton
                        android:id="@+id/jinji"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_marginRight="5dp"
                        android:drawableRight="@mipmap/selected"
                        android:textColor="@color/schedule_button_text"
                        android:background="@drawable/check_view_background"
                        android:padding="3dp"
                        android:singleLine="true"
                        android:gravity="center"
                        android:drawablePadding="3dp"
                        android:button="@null"/>
                    <RadioButton
                        android:id="@+id/zhongda"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_marginRight="5dp"
                        android:drawableRight="@mipmap/selected"
                        android:gravity="center"
                        android:textColor="@color/schedule_button_text"
                        android:background="@drawable/check_view_background"
                        android:padding="3dp"
                        android:singleLine="true"
                        android:drawablePadding="3dp"
                        android:button="@null"/>
                    <RadioButton
                        android:id="@+id/yiban"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_marginRight="5dp"
                        android:drawableRight="@mipmap/selected"
                        android:textColor="@color/schedule_button_text"
                        android:background="@drawable/check_view_background"
                        android:padding="3dp"
                        android:gravity="center"
                        android:singleLine="true"
                        android:drawablePadding="3dp"
                        android:button="@null"/>
                </RadioGroup>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@color/white">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="@string/shuxing"/>
                <RadioGroup
                    android:id="@+id/zhuangtailist"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:horizontalSpacing="5dp"
                    android:padding="5dp"
                    android:orientation="horizontal"
                    android:numColumns="3">
                    <RadioButton
                        android:id="@+id/xinjian"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_marginRight="5dp"
                        android:drawableRight="@mipmap/selected"
                        android:textColor="@color/schedule_button_text"
                        android:background="@drawable/check_view_background"
                        android:padding="3dp"
                        android:singleLine="true"
                        android:gravity="center"
                        android:drawablePadding="3dp"
                        android:button="@null"/>
                    <RadioButton
                        android:id="@+id/chuli"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_marginRight="5dp"
                        android:drawableRight="@mipmap/selected"
                        android:gravity="center"
                        android:textColor="@color/schedule_button_text"
                        android:background="@drawable/check_view_background"
                        android:padding="3dp"
                        android:singleLine="true"
                        android:drawablePadding="3dp"
                        android:button="@null"/>
                    <RadioButton
                        android:id="@+id/wancheng"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_marginRight="5dp"
                        android:drawableRight="@mipmap/selected"
                        android:textColor="@color/schedule_button_text"
                        android:background="@drawable/check_view_background"
                        android:padding="3dp"
                        android:gravity="center"
                        android:singleLine="true"
                        android:drawablePadding="3dp"
                        android:button="@null"/>
                </RadioGroup>
            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:background="@drawable/edit_style_shape"
                android:layout_marginTop="10dp"
                android:layout_height="120dp">
                <EditText
                    android:id="@+id/desc_info"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="left|top"
                    android:hint="@string/descrition"
                    android:textSize="12sp"
                    android:background="@null"
                    android:layout_margin="10dp"
                    />
                <ImageButton
                    android:id="@+id/commonDesc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_margin="10dp"
                    android:padding="10dp"
                    android:src="@mipmap/plus_little"/>
            </RelativeLayout>
            <Button
                android:id="@+id/submit_totle"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:textColor="@color/white"
                android:layout_marginTop="20dp"
                android:layout_margin="5dp"
                android:background="@drawable/login_button_shape"
                android:text="@string/submit"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
