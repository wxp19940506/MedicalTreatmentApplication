<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_setting_person_icon"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/person_button_back"
    tools:context="iok.la.com.medicaltreatmentapplication.activities.SettingPersonIconActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/titlebar_background"
            android:gravity="center">
            <ImageButton
                android:id="@+id/turn_last"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:padding="5dp"
                android:background="@android:color/transparent"
                android:src="@mipmap/zuob"
                />
            <TextView
                android:id="@+id/title"
                style="@style/Title_Style"
                android:text="@string/setting_usericon"/>
        </RelativeLayout>
        <cn.bingoogolapple.imageview.BGAImageView
            android:id="@+id/user_icon"
            android:layout_width="200dp"
            android:layout_height="120dp"
            android:src="@mipmap/wei"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            app:bga_iv_isCircle="true"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:layout_marginBottom="90dp">
        <Button
            android:id="@+id/open_photo"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:text="@string/selectfrom"
            android:background="@color/icon_button_back"/>
        <Button
            android:id="@+id/take_cameras"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="10dp"
            android:text="@string/camera"
            android:background="@color/icon_button_back"/>

    </LinearLayout>

</RelativeLayout>
